<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Diplay feedback section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/changeProfilePhoto"
            android:layout_marginTop="10dp"
            android:layout_margin="15dp"
            android:background="@drawable/grey_border_bottom"
            android:id="@+id/relLayout2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Envie-nos um feedback!"
                android:gravity="center_horizontal"
                android:textSize="18dp"
                android:layout_margin="15dp"
                android:id="@+id/feedb"/>

            <EditText
                android:layout_below="@id/feedb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Feedback"
                android:layout_centerVertical="true"
                android:background="@null"
                android:inputType="textImeMultiLine"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relLayout2"
            android:layout_margin="15dp"
            android:background="@drawable/grey_border_bottom">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quais outras áreas do direito você gostaria que fossem abordadas?"
                android:gravity="center_horizontal"
                android:textSize="18dp"
                android:layout_margin="15dp"
                android:id="@+id/areas"/>

            <EditText
                android:layout_below="@id/areas"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/areasDireitoSugestao"
                android:layout_centerVertical="true"
                android:background="@null"
                android:inputType="textImeMultiLine"/>

        </RelativeLayout>



    </RelativeLayout>

</merge>