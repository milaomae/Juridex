<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.PremiumFragment"
    android:orientation="vertical"
    android:background="@drawable/fundo"
    android:id="@+id/tela_questao_container"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/layout_content_viewpager"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/snipper_top_question"/>
        </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="35dp"
                android:layout_width="310dp"
                android:layout_height="200dp"
                android:background="@drawable/roundcornerborda"
                android:layout_centerHorizontal="true"
                android:id="@+id/relLayout1">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/roundcorner"
                    android:orientation="vertical">

                    <com.example.lucas.juridex_v13.Utils.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtQuestion"
                        android:layout_gravity="center"/>


                </FrameLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/relLayout1"
                android:layout_marginTop="10dp"
                android:layout_width="310dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/roundcorner"
                    android:id="@+id/btnA"/>


                <Button
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/btnA"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/roundcorner"
                    android:id="@+id/btnB"/>

                <Button
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/btnB"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/roundcorner"
                    android:id="@+id/btnC"/>

                <Button
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/btnC"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/roundcorner"
                    android:id="@+id/btnD"/>


            </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
