<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.PremiumFragment"
    android:orientation="vertical"
    android:background="@drawable/fundo">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/white">

        <utils.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtnivelAtual"
            android:textSize="20dp"
            android:text="nivel"
            android:layout_marginLeft="130dp"
            />

        <utils.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtperguntaAtual"
            android:textSize="20dp"
            android:text="2"
            android:layout_marginLeft="20dp"
            />
        <utils.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            />

        <utils.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtnumeroTotalPerguntas"
            android:textSize="20dp"
            android:text="15"
            android:layout_marginLeft="5dp"
            />

    </android.support.v7.widget.Toolbar>

            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="310dp"
                android:layout_height="200dp"
                android:background="@drawable/roundcornerborda"
                android:layout_centerHorizontal="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/roundcorner"
                    android:orientation="vertical">

                </FrameLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="237.5dp"
                android:layout_width="310dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/roundcorner"
                    android:id="@+id/btnA"/>

                <Button
                    android:layout_marginTop="65dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/roundcorner"
                    android:id="@+id/btnB"/>

                <Button
                    android:layout_marginTop="130dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/roundcorner"
                    android:id="@+id/btnC"/>

                <Button
                    android:layout_marginTop="195dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/roundcorner"
                    android:id="@+id/btnD"/>


            </RelativeLayout>


            




</RelativeLayout>
