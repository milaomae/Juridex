<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fundo"
    android:id="@+id/tela_questao_container"
    >


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/white">

        <com.example.lucas.juridex_v13.Utils.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtnivelAtual"
            android:textSize="20dp"
            android:text=""
            android:layout_marginLeft="130dp"
            />

        <com.example.lucas.juridex_v13.Utils.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtperguntaAtual"
            android:textSize="20dp"
            android:text=""
            android:layout_marginLeft="20dp"
            />

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="310dp"
                android:layout_height="200dp"
                android:background="@drawable/roundcornerborda"
                android:layout_centerHorizontal="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/roundcorner"
                    android:orientation="vertical">

                    <com.example.lucas.juridex_v13.Utils.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtQuestion"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:gravity="center"/>



                </FrameLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="237.5dp"
                android:layout_width="310dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/roundcorner"
                    android:id="@+id/linLayout1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:minHeight="60dp"
                        android:layout_weight="20"
                        android:text="A"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:textColor="@color/greenbr"
                        android:gravity="center"
                        android:background="@drawable/letters_background"/>

                <com.example.lucas.juridex_v13.Utils.MyButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="80"
                    android:minHeight="60dp"
                    android:id="@+id/btnA"
                    android:textSize="15dp"
                    android:textAllCaps="false"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/linLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/roundcorner"
                    android:id="@+id/linLayout2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:minHeight="60dp"
                    android:layout_weight="20"
                    android:text="B"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="@color/greenbr"
                    android:gravity="center"
                    android:background="@drawable/letters_background"/>
                <com.example.lucas.juridex_v13.Utils.MyButton
                    android:layout_weight="80"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:minHeight="60dp"
                    android:id="@+id/btnB"
                    android:textSize="15dp"
                    android:textAllCaps="false"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/linLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/roundcorner"
                    android:id="@+id/linLayout3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:minHeight="60dp"
                    android:layout_weight="20"
                    android:text="C"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="@color/greenbr"
                    android:gravity="center"
                    android:background="@drawable/letters_background"/>

                    <com.example.lucas.juridex_v13.Utils.MyButton
                        android:layout_weight="80"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:minHeight="60dp"
                        android:background="none"
                        android:id="@+id/btnC"
                        android:textSize="15dp"
                        android:textAllCaps="false"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/linLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/roundcorner"
                    android:id="@+id/linLayout4">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:minHeight="60dp"
                        android:layout_weight="20"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:textColor="@color/greenbr"
                        android:text="D"
                        android:gravity="center"
                        android:background="@drawable/letters_background"/>

                    <com.example.lucas.juridex_v13.Utils.MyButton
                        android:layout_weight="80"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:minHeight="60dp"
                        android:id="@+id/btnD"
                        android:textSize="15dp"
                        android:textAllCaps="false"/>

                </LinearLayout>


            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <ProgressBar
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/perguntaRequestLoadingProgressbar"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please wait..."
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/perguntaRequestLoadingProgressbar"
        android:layout_alignRight="@+id/perguntaRequestLoadingProgressbar"
        android:layout_alignLeft="@+id/perguntaRequestLoadingProgressbar"
        android:id="@+id/pleaseWait"/>






</RelativeLayout>
