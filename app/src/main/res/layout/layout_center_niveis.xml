<merge xmlns:android="http://schemas.android.com/apk/res/android"
   >

    <android.support.design.widget.CoordinatorLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/coordLayout1"
        android:background="@drawable/fundo"
        >

        <include layout="@layout/layout_content_viewpager"/>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="310dp"
            android:layout_height="470dp"
            android:background="@drawable/roundcornerborda"
            android:layout_gravity="center_horizontal"
            android:id="@+id/relLayout1">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/roundcorner"
                android:orientation="vertical"
                android:id="@+id/framLayout1">


                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="55dp"
                    android:id="@+id/btnfacilUm"
                    android:tooltipText="1"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_game"
                    android:backgroundTint="@color/bluebr"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="75dp"
                    />

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="200dp"
                    android:id="@+id/btnmedioUm"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_game"
                    android:backgroundTint="@color/bluebr"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="220dp"/>

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="345dp"
                    android:id="@+id/btndificilUm"
                    android:background="@drawable/button"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_game"
                    android:backgroundTint="@color/bluebr"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="365dp"/>


            </FrameLayout>

        </RelativeLayout>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="@drawable/faixa2"
            />



        <ImageView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="@drawable/faixa1"
            android:layout_marginTop="145dp"
            />


        <ImageView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="@drawable/faixa3"
            android:layout_marginTop="288dp"
            />


    </android.support.design.widget.CoordinatorLayout>

</merge>