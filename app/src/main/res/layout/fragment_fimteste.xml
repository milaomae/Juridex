<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.PremiumFragment"
    android:orientation="vertical"
    android:background="@drawable/fundo">


    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="310dp"
        android:layout_height="470dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roundcornerborda">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="@drawable/roundcorner">

                <com.example.lucas.juridex_v13.Utils.MyTextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Resultado:"
                    android:textSize="30dp"
                    />


                <com.example.lucas.juridex_v13.Utils.MyTextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtResultado"
                    android:layout_marginTop="50dp"
                    android:text="3"/>

                <com.example.lucas.juridex_v13.Utils.MyTextView
                    android:layout_width="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content"
                    android:text="/"/>

                <com.example.lucas.juridex_v13.Utils.MyTextView
                    android:layout_width="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtQtdPerguntas"
                    android:text="10"/>

                <com.example.lucas.juridex_v13.Utils.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Está quase lá"
                    android:layout_marginTop="90dp"
                    android:id="@+id/txtMensagem"/>

                <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_refresh"
                android:id="@+id/btnReiniciarTeste"
                android:layout_marginTop="120dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_back"
                    android:id="@+id/btnVoltarTelaNiveis"
                    android:layout_marginTop="120dp"
                    android:layout_marginLeft="70dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_forward"
                    android:id="@+id/btnProximoTeste"
                    android:layout_marginTop="120dp"
                    android:layout_marginLeft="140dp"/>
            </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>