<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo">


    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="310dp"
        android:layout_height="470dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roundcornerborda">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:background="@drawable/roundcorner">


                <com.example.lucas.juridex_v13.Utils.MyTextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Resultado:"
                    android:textSize="35dp"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="80dp"
                    android:id="@+id/result"
                    android:textColor="@color/bluebr"
                    />


                <com.example.lucas.juridex_v13.Utils.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtResultado"
                    android:layout_below="@+id/result"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:textSize="30dp"
                    android:textColor="@color/bluebr"
                    android:text="3 / 10"/>



                <com.example.lucas.juridex_v13.Utils.MyTextView
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:text="Está quase lá"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:padding="10dp"
                    android:id="@+id/txtMensagem"
                    android:textSize="30dp"
                    android:background="@drawable/designbutton"
                    android:gravity="center"
                    android:textColor="@color/bluebr"
                    android:layout_below="@+id/txtResultado"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_below="@id/txtMensagem"
                    android:layout_marginTop="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/designbutton">
                        <Button
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/ic_refresh"
                            android:id="@+id/btnReiniciarTeste"
                            android:backgroundTint="@color/bluebr"
                         />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/designbutton"
                        android:layout_marginLeft="10dp">
                        <Button
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/ic_back"
                            android:id="@+id/btnVoltarTelaNiveis"
                            android:backgroundTint="@color/bluebr"
                        />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/designbutton"
                        android:layout_marginLeft="10dp">
                        <Button
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/ic_forward"
                            android:id="@+id/btnProximoTeste"
                            android:backgroundTint="@color/bluebr"

                        />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>